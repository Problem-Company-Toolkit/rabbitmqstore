  // Golang Ginkgo tests debugger - Run tests by just pressing F5 while you have the test selected.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Tests in Current File",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": [
        "--ginkgo.focus-file=${file}"
      ],
      "env": {
        "GO_TEST_COMMAND": "ginkgo"
      }
    }
  ],
}